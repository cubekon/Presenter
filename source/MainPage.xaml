<Page
    x:Class="Presenter.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Presenter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:control="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBox Name="addressBar" Grid.Column="0" Grid.ColumnSpan="2"/>
        <Button x:Name="myButton" Grid.Column="2" Click="myButton_Click" HorizontalAlignment="Center" Height="32" Width="42">Go</Button>

        <Button x:Name="newWindows" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Stretch" Margin="10,0,10,0" Click="newWindows_Click">Neues Fenster</Button>
        
        <control:WebView2 x:Name="MyWebView" Grid.Row="1" Grid.ColumnSpan="2"
            Source="https://www.microsoft.com" Grid.Column="1" Margin="0,0,0,0"/>
    </Grid>
</Page>
